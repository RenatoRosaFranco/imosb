<%= provide :title, 'Criar Conta' %>
<%= provide :description, 'Crie sua conta para começar a usar os nossos serviços.' %>
<%= provide :keywords, 'signup, cadastro, criacao, acesso, conta' %>

<% ld_json = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "url": "https://imosb.com.br",
  "name": "ImoSB",
  "description": "Encontre seu lugar no mundo"
} %>

<section id="signup">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <h2 class="text-center bold">Criar Conta</h2>
              <p class="text-center">Crie sua conta em nossa pĺataforma.</p>
              <br />

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
              
                <div class="field">
                  <%= f.label :email, 'E-mail' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: 'form-control', required: 'required', placeholder: 'Digite o e-mail' %>
                </div>
              
                <div class="field">
                  <%= f.label :password, 'Senha' %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password",
                  class: 'form-control', required: 'required', placeholder: 'Digite a senha' %>
                </div>
              
                <div class="field">
                  <%= f.label :password_confirmation, 'Confirmar senha' %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: 'form-control', required: 'required', placeholder: 'Confirme sua senha' %>
                </div>
              
                <div class="actions"><br />
                  <%= f.submit "Criar conta", class: 'btn btn-primary btn-lg',
                  style: 'width: 100%;' %>
                </div>
              <% end %>
              
              <hr />
              <%= render "devise/shared/links" %>              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
