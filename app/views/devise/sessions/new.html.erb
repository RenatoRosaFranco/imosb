<%= provide :title, 'Login' %>
<%= provide :description, 'Faça login na sua conta para acessar nossos serviços.' %>
<%= provide :keywords, 'login, acesso, conta' %>

<% ld_json = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "url": "https://imosb.com.br",
  "name": "ImoSB",
  "description": "Encontre seu lugar no mundo"
} %>

<%= provide :ld_json, ld_json %>

<section id="signin">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <h2 class="bold text-center">Log in</h2>
              <p class="tex-center text-center">Acesse sua conta.</p>
              <br />

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email, 'E-mail' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: 'form-control', required: 'required', placeholder: 'Digite o e-mail'%>
                </div>
              
                <div class="field">
                  <%= f.label :password, 'Senha' %><br />
                  <%= f.password_field :password, autocomplete: "current-password",
                  class: 'form-control', required: 'required', placeholder: 'Digite a senha' %>
                </div>
              
                <% if devise_mapping.rememberable? %>
                  <div class="field"><br />
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Lembrar-me' %>
                  </div>
                <% end %>
              
                <div class="actions"><br />
                  <%= f.submit "Log in", class: 'btn btn-primary btn-lg',
                  style: 'width: 100%;' %>
                </div>
              <% end %>
              
              <hr />
              <%= render "devise/shared/links" %>              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>